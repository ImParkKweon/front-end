pipeline {
	// agent dockerfile {
	// 	filename 'Dockerfile.build'
	// 	dir '.'
	// 	label 'dockerfile-label'
	// 	additionalBuildArgs ''
	// }
	environment {
		DOCKERHUB_CRED = credentials('docker_credentials')
	}
	// agent {dockerfile true }
	agent any
	stages {
		stage("Checkout") {
			steps {
				checkout scm
				/*SCM 에서 소스 추출하기 때문에 소스를 체크아웃 한다.*/
			}
		}
		stage("Build") {
			steps {
                script {
					// sh "docker build -t hyunjun1325@icloud.com/frontend:$BUILD_NUMBER ."
					sh "docker build -t $BUILD_NUMBER ."
					// sh "docker build ."
				}
			}
		}
		stage("Docker_login") {
			steps {
				sh 'echo $DOCKERHUB_CRED_PSW | docker login -u $DOCKERHUB_CRED_USR --password-stdin'
			}
		}
		stage("Push_image") {
			steps {
				script {
					sh "docker push hyunjun1325@icloud.com/frontend:$BUILD_NUMBER"
				}
			}
		}
		// stage('Clean_image') {
		// 	steps {
		// 		sh "docker rmi hyunjun1325@icloud.com/frontend:$BUILD_NUMBER"
		// 	}
		// }
	}
}

